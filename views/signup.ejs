<%-include('includes/header')%>
<link rel="stylesheet" type="text/css" href="/css/login.css" />
<body>
  <form
    class="login_container"
    action="/resto/sign-up"
    method="POST"
    enctype="multipart/form-data"
  >
    <!-- enctype img lar push qilish uchun ishlatiladi. -->
    <div class="login_frame" style="width: 650px; height: 730px">
      <div class="login_top">
        <span>Ro'yxatdan o'tish</span>
        <div>
          Bosh sahifaga qaytish <a style="color: #6440fb" href="/resto">Home</a>
        </div>
        <p>
          Ro'yxatdan allaqachon o'tganmisiz?
          <a style="color: #6440fb" href="/resto/login">Login</a>
        </p>
      </div>
      <div class="sign_input_frame">
        <div class="sign_up_frame">
          <label for="">Foydalanuvchining ismi</label>
          <input
            type="text"
            name="mb_nick"
            placeholder="Foydalanuvchining ismi"
            value=""
            required
          />
        </div>
        <div class="sign_up_frame">
          <label for="">Telefon raqam</label>
          <input
            type="text"
            name="mb_phone"
            placeholder="Telefon raqam"
            value=""
            required
          />
        </div>
      </div>
      <div class="sign_input_frame">
        <div class="sign_up_frame">
          <label for="">Password</label>
          <input
            type="password"
            name="mb_password"
            placeholder="Password"
            value=""
            required
          />
        </div>
        <div class="sign_up_frame">
          <label for="">Passwordni qayta kiriting</label>
          <input
            type="password"
            name="mb_confirm_password"
            placeholder="Passwordni tasdiqlash "
            value=""
            required
          />
        </div>
      </div>
      <div class="login_input_frame">
        <div class="media-frame">
          <img
            class="upload_img_frame"
            src="/images/default_resto.png"
            alt="default_resto"
          />
          <div class="upload_container">
            <span class="media_text">Taom Rasmi</span>
            <div class="filebox bs3-primary preview-image">
              <input
                disabled="disabled"
                value="Rasmni tanlang"
                class="upload-name"
              />
              <label for="">Rasmni Yuklash</label>
              <input
                type="file"
                id="input_file"
                name="restaurant-img"
                class="upload-hidden form-control-file restaurant-img"
              />
            </div>
            <p class="thumbnail_desc">
              Oshxona rasmingizni bu yerga yuklang. <br />Muhim ko'rsatmalar:
              .jpg, .jpeg, png <br />
              rasmda matn yo'q bo'lishi kerak!
            </p>
          </div>
        </div>
      </div>
      <button class="login_btn btn" name="signup" type="submit">
        Ro'yxatdan o'tish
      </button>
    </div>
  </form>
</body>
<%-include('includes/footer')%>
